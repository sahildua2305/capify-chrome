{
	"manifest_version": 2,

	"name": "Capify Chrome",
	"description": "An extension to convert the highlighted text into UPPERCASE.",
	"version": "1.0.0",

	"browser_action": {
		"default_icon": "assets/icons/icon-19.jpg",
		"default_popup": "main.html"
	},
	
	"icons": {
		"48": "assets/icons/icon-48.jpg",
		"128": "assets/icons/icon-128.jpg"
	},
	
	"permissions": [
		"contextMenus"
	],
	
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	}
}